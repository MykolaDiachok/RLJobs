<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.radioline.master.myapplication" >

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.radioline.master.myapplication.Login"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.radioline.master.myapplication.SecondGroup"
            android:label="@string/title_activity_second_group"
            android:parentActivityName="com.radioline.master.myapplication.Login" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.radioline.master.myapplication.Login" />
        </activity>
        <activity
            android:name="com.radioline.master.myapplication.ItemActivity"
            android:label="@string/title_activity_item"
            android:parentActivityName="com.radioline.master.myapplication.Login" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.radioline.master.myapplication.Login" />
        </activity>
        <activity
            android:name="com.radioline.master.myapplication.PicActivity"
            android:label="@string/title_activity_pic"
            android:parentActivityName="com.radioline.master.myapplication.Login" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.radioline.master.myapplication.Login" />
        </activity>
        <activity
            android:name="com.radioline.master.myapplication.ImageActivity"
            android:label="@string/title_activity_image"
            android:parentActivityName="com.radioline.master.myapplication.ItemActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.radioline.master.myapplication.ItemActivity" />
        </activity>
    </application>

</manifest>
